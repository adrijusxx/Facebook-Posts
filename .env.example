# Facebook Trucking News Automation - Environment Configuration

# Flask Configuration
SECRET_KEY=your-secret-key-here-change-this-in-production
DATABASE_URL=sqlite:///trucking_news.db

# Facebook Configuration
FACEBOOK_PAGE_ID=your-facebook-page-id
FACEBOOK_ACCESS_TOKEN=your-facebook-page-access-token

# OpenAI Configuration (for AI-enhanced posts)
OPENAI_API_KEY=your-openai-api-key-here

# Application Settings
POSTS_PER_DAY=3
POSTING_HOURS=9,14,19
AUTO_POSTING_ENABLED=true
AI_ENHANCEMENT_ENABLED=true
AI_POST_STYLE=informative

# Logging
LOG_LEVEL=INFO